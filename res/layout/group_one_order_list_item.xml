<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="100dp"
    android:minHeight="70dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <com.tx.customerservices.view.FButton 
            android:id="@+id/fbtn_order_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.tx.customerservices.view.JustifyTextView
            android:id="@+id/jtv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="JustifyTextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <com.tx.customerservices.view.FButton
            android:id="@+id/fbtn_order_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_info" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <com.tx.customerservices.view.FButton
            android:id="@+id/fbtn_doctor_patient_communicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doctor_patient_communication" />

    </LinearLayout>

</LinearLayout>
